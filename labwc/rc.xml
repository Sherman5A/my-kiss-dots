<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <core>
    <decoration>server</decoration>
    <gap>0</gap>
    <adaptiveSync>yes</adaptiveSync>
    <windowSwitcher show="yes" preview="yes" outlines="yes" />
  </core>

  <theme>
    <name>Clia</name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <focus>
    <followMouse>yes</followMouse>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>	

  <snapping>
     <range>1</range>
     <topMaximize>no</topMaximize>
  </snapping>

  <desktops>
    <popupTime>1000</popupTime>
    <names>
      <name>1</name>
      <name>2</name>
      <name>3</name>
    </names>
  </desktops>

  <!-- Regions !-->
  <regions>
    <region name="SmallWindow" x="0%"  y="0%"  height="50%"  width="50%" />
  </regions>

  <keyboard>
    <default />
    <repeatRate>33</repeatRate>
    <repeatDelay>250</repeatDelay>
    <!-- Shortcuts !-->
    <keybind key="W-Return">
      <action name="Execute" command="footclient" />
    </keybind>
    <keybind key="W-S-f">
      <action name="Execute" command="firefox" />
    </keybind>
    <keybind key="A-Tab">
      <action name="None" />
    </keybind>
    <keybind key="W-Tab">
      <action name="NextWindow" />
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None" />
    </keybind>

    <!-- Add launcher keybind !-->

    <!--
    <keybind key="W-p">
      <action name="Open launcher" />
    </keybind>
    !-->

    <keybind key="W-q">
      <action name="Close" />
    </keybind>
    <keybind key="W-a">
      <action name="ToggleMaximize" />
    </keybind>
    <keybind key="W-y">
      <action name="ToggleDecorations" />
    </keybind>
    <keybind key="W-f">
      <action name="ToggleFullscreen" />
    </keybind>
    <keybind key="W-C-A-q">
      <action name="Exit" />
    </keybind>
    <keybind key="W-C-A-r">
      <action name="Reconfigure" />
    </keybind>

    <!-- Workspaces !-->
    <keybind key="W-1">
      <action name="GoToDesktop" to="1" />
    </keybind>
    <keybind key="W-S-1">
      <action name="SendToDesktop" to="1" follow="no"  />
    </keybind>

    <keybind key="W-2">
      <action name="GoToDesktop" to="2" />
    </keybind>
    <keybind key="W-S-2">
      <action name="SendToDesktop" to="2" follow="no"  />
    </keybind>

    <keybind key="W-3">
      <action name="GoToDesktop" to="3" />
    </keybind>
    <keybind key="W-S-3">
      <action name="SendToDesktop" to="3" follow="no" />
    </keybind>

    <!-- Window Positioning !-->

    <!-- Move Positioning !-->
    <keybind key="W-h">
      <action name="MoveToEdge" direction="left" />
    </keybind>
    <keybind key="W-l">
      <action name="MoveToEdge" direction="right" />
    </keybind>
    <keybind key="W-k">
      <action name="MoveToEdge" direction="up" />
    </keybind>
    <keybind key="W-j">
      <action name="MoveToEdge" direction="down" />
    </keybind>

    <!-- Snap positioning !-->
    <keybind key="A-h">
      <action name="SnapToEdge" direction="left" />
    </keybind>
    <keybind key="A-l">
      <action name="SnapToEdge" direction="right" />
    </keybind>
    <keybind key="A-k">
      <action name="SnapToEdge" direction="up" />
    </keybind>
    <keybind key="A-j">
      <action name="SnapToEdge" direction="down" />
    </keybind>

    <keybind key="W-up">
      <action name="None" />
    </keybind>
    <keybind key="W-left">
      <action name="None" />
    </keybind>
    <keybind key="W-down">
      <action name="None" />
    </keybind>
    <keybind key="W-right">
      <action name="None" />
    </keybind>

   <keybind key="A-up">
      <action name="None" />
    </keybind>
    <keybind key="A-left">
      <action name="None" />
    </keybind>
    <keybind key="A-down">
      <action name="None" />
    </keybind>
    <keybind key="A-right">
      <action name="None" />
    </keybind>

    <!-- Region positioning !-->
    <keybind key="W-s">
      <action name="SnapToRegion" region="SmallWindow" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <scrollFactor>0.5</scrollFactor>
    <context name="Frame">
      <mousebind button="W-Left" action="Drag">
        <action name="Move" />
      </mousebind>
      <mousebind button="W-Right" action="Drag">
        <action name="Resize" />
      </mousebind>
      <mousebind button="A-Left" action="Drag">
        <action name="None" />
      </mousebind>
      <mousebind button="A-Right" action="Drag">
        <action name="None" />
      </mousebind>
    </context>
    <context name="root">
      <mousebind button="right" action="press">
        <action name="showmenu" menu="systemMenu" />
      </mousebind>
    </context>
  </mouse>

</labwc_config>

